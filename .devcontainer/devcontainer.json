{
  "name": "TerminalTutor",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "POETRY_VIRTUALENVS_IN_PROJECT": "true",
    "POETRY_NO_INTERACTION": "1"
  },
  "postCreateCommand": "/bin/bash -lc 'sudo apt-get update && sudo apt-get install -y git-lfs && git lfs install --system && curl -sSL https://install.python-poetry.org | python3 - && echo \"export PATH=\\$HOME/.local/bin:\\$PATH\" >> ~/.bashrc && export PATH=\"$HOME/.local/bin:$PATH\" && poetry config virtualenvs.in-project true && if [ -f pyproject.toml ]; then poetry install --no-ansi; fi'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "editorconfig.editorconfig"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.formatting.provider": "black",
        "ruff.enable": true
      }
    }
  }
}